<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:backgroundTint="@color/white"
    android:elevation="4dp"
    app:cardCornerRadius="15dp"
    app:cardUseCompatPadding="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rlRow">

        <ImageView
            android:id="@+id/imgDes"
            android:layout_width="80dp"
            android:layout_height="105dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:contentDescription="Task Tiltle Image" />
        <TextView
            android:layout_width="189dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:text="Task Title Placeholder"
            android:padding="1dp"
            android:layout_toEndOf="@+id/imgDes"
            android:id="@+id/txtTask"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="8"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="8dp"
            android:textSize="20sp"
            android:textStyle="italic"
            android:textColor="@color/black"
            android:layout_toEndOf="@+id/imgDes"
            android:layout_below="@id/txtTask"
            android:text="Time Placeholder"
            android:padding="1dp"
            android:id="@+id/txtTime"
            />

        <TextView
            android:id="@+id/txtAI"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:layout_toEndOf="@+id/txtTask"
            android:text="Addition Info Placeholder"
            android:textColor="#0E0D0D"
            android:textSize="15sp"
            android:paddingStart="3dp"/>




        
    </RelativeLayout>

</androidx.cardview.widget.CardView>